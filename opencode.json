{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "demo_server": {
      "type": "local",
      "command": ["node", "/root/myskills/SKILLS/mcp-demo-server.js"],
      "enabled": true,
      "description": "演示用的简单MCP服务器，提供数学计算、时间获取和UUID生成功能"
    },
    "mcp_everything": {
      "type": "local", 
      "command": ["npx", "-y", "@modelcontextprotocol/server-everything"],
      "enabled": false,
      "description": "官方测试MCP服务器，包含各种工具示例"
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": false,
      "description": "文档搜索MCP服务器"
    }
  },
  "tools": {
    "demo_server_*": true,
    "mcp_everything_*": false,
    "context7_*": false
  },
  "agent": {
    "demo_agent": {
      "description": "演示MCP功能的专用代理",
      "tools": {
        "demo_server_*": true,
        "context7_*": true
      },
      "rules": [
        "当用户需要数学计算时，使用demo_server的calculate工具",
        "当用户需要时间信息时，使用demo_server的current_time工具", 
        "当用户需要唯一标识符时，使用demo_server的generate_uuid工具",
        "当需要搜索文档时，使用context7工具"
      ]
    }
  }
}